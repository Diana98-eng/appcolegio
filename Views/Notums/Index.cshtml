@model IEnumerable<appcolegio.Models.Notum>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Informe Academico Notas</h1>

<p>
    <a class="btn btn-success btn-sm" asp-action="Create">Registrar Nueva Nota </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nota)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.oEstudiante.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.oEstudiante.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.oMateria.NomMateria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nota)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.oEstudiante.Nombre)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.oEstudiante.Apellido)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.oMateria.NomMateria) 
            </td>
            <td>
                    <a asp-action="Edit" class=" btn btn-warning btn-sm" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" class="btn btn-info btn-sm" asp-route-id="@item.Id">Detalle</a> |
                    <a asp-action="Delete" class="btn btn-danger btn-sm" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
