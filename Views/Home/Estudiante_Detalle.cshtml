@model appcolegio.Models.viewmodels.EstudianteVM


@{
    ViewData["Title"] = "crear o editar estudiante";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model.oNota.Id == 0)
{
    <h1>crear nuevo</h1>
}
else
{
    <h2>editar nuevo estudiante</h2>
}
<div class="row">
    <div class="col-sm-6">
        <form asp-action="@(Model.oNota.Id == 0? "Guardar" : "Editar")" asp-controller="Home" method="post">
            <input type="hidden" asp-for="oNota.Id" />
            <div class=" mb-2">
                <label class="form-label">Nombre</label>
                <input class="form-control" asp-for="oNota.oEstudiante.Nombre"  />
            </div>
            <div class=" mb-2">
                <label class="form-label">apellido</label>
                <input class="form-control" asp-for="oNota.oEstudiante.Apellido" />   
            </div>
            
            <br />
            <div class=" mb-2">
                @if (Model.oNota.Id == 0)
                {
                    <button class=" btn btn-primary btn-sm"  type= "submit">Guardar </button>

                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">actualizar</button>
                }

            </div>

            <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Home">volver </a>

        </form>
    </div>
</div>
